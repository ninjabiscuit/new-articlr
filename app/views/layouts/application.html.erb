    <div id="main" role="main">
      <%= yield %>
    </div>
    <footer>

    </footer>
  </div> <!--! end of #container -->


  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's Dojo, with a protocol relative URL; fall back to local if necessary -->
